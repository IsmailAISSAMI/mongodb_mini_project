<div class="my-5">
    <canvas id="pieChartWorldwide" width="800" height="500" class="mx-auto"></canvas>
    <script>
        var ctx = document.getElementById('pieChartWorldwide').getContext('2d');
        var myPieChart = new Chart(ctx, {
            type: 'pie',
            data: {
                labels: ['cases Per One Million', 'deaths Per One Million', 'recovered Per One Million', 'active Per One Million', 'critical Per One Million'],
                datasets: [{
                    label: 'COVID19 - Statistics',
                    data: [{{casesPerOneMillion}}, {{deathsPerOneMillion}}, {{recoveredPerOneMillion}}, {{activePerOneMillion}}, {{criticalPerOneMillion}}],
                    backgroundColor: [
                        'rgba(255, 206, 86, 0.5)', // yellow
