<canvas id="pieChart" width="800" height="500" class="mx-auto"></canvas>
<script>
    var ctx = document.getElementById('pieChart').getContext('2d');
    var myChart = new Chart(ctx, {
        type: 'bar',
        data: {
            labels: ['cases', 'deaths', 'recovered', 'active', 'critical'],
            datasets: [{
                label: 'COVID19 - Statistics',
                data: [{{cases}}, {{deaths}}, {{recovered}}, {{active}}, {{critical}}],
                backgroundColor: [
                    'rgba(255, 206, 86, 0.2)', // yellow
                    'rgba(255, 99, 132, 0.2)', // red
                    'rgba(75, 192, 192, 0.2)', // green
                    'rgba(54, 162, 235, 0.2)', // blue
                    'rgba(255, 159, 64, 0.2)' // orange                    
                ],
                borderColor: [
                    'rgba(255, 206, 86, 2)', // yellow
                    'rgba(255, 99, 132, 2)', // red
                    'rgba(75, 192, 192, 2)', // green
                    'rgba(54, 162, 235, 2)', // blue
                    'rgba(255, 159, 64, 2)' // orange
                ],
                borderWidth: 2
            }]
        },
        options: {
            scales: {
                yAxes: [{
                    ticks: {
                        beginAtZero: true
                    }
                }]
            },
            responsive: false
        }
    });
</script>